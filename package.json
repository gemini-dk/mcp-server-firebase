{
  "name": "firebase-mcp",
  "version": "1.0.0",
  "description": "MCP server for Firestore operations",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ]
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^22.13.4",
    "jest": "^29.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
